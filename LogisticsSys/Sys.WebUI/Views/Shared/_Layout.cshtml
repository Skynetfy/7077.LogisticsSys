<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>7077物流管理系统</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/index.css" rel="stylesheet" />
    <link href="~/Content/daterangepicker.css" rel="stylesheet" />
    <link href="~/Content/jquery.mloading.css" rel="stylesheet" />
    <link href="//cdn.bootcss.com/bootstrap-table/1.11.0/bootstrap-table.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/bootstrap-table.js"></script>
    <script src="~/Scripts/bootstrap-table-zh-CN.min.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/daterangepicker.js"></script>
    <script src="~/Scripts/jquery.mloading.js"></script>
</head>
<body>
    @Html.Action("Header", "Home")
    <div class="container body-content" id="main-page">
        @RenderBody()
    </div>
    <script>
        $(function () {
            //$('#main-page').mLoading({
            //    text: "",//加载文字，默认值：加载中...
            //    icon: "",//加载图标，默认值：一个小型的base64的gif图片
            //    html: false,//设置加载内容是否是html格式，默认值是false
            //    content: "",//忽略icon和text的值，直接在加载框中显示此值
            //    mask: true//是否显示遮罩效果，默认显示
            //});
            //$('#main-page').mLoading("show");//显示loading组件
            $('#main-menu>ul>li:first').addClass('nav-current');
            $('#main-menu>ul>li>a').click(function (e) {
                e.stopPropagation();
                e.preventDefault();
                $(this).parent().addClass('nav-current');
                $(this).parent().siblings('li').removeClass('nav-current');
                var url = $(this).attr('href');
                $('#main-page').load(url);

            });
          
        })
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
